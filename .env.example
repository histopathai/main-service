
# ===============================================================
# ENVIRONMENT CONFIGURATION
# ===============================================================
# Environment: LOCAL, DEV, or PROD
# - LOCAL: Local development (no resource prefixes)
# - DEV: Development environment (adds "dev-" prefix to all resources)
# - PROD: Production environment
ENV=LOCAL

# Application Version
APP_VERSION=1.0.0

# ===============================================================
# SERVER CONFIGURATION
# ===============================================================
PORT=8080
GIN_MODE=debug

# Timeouts
READ_TIMEOUT=15s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s

# ===============================================================
# LOGGING
# ===============================================================
LOG_LEVEL=debug
LOG_FORMAT=text

# ===============================================================
# GCP CONFIGURATION
# ===============================================================
PROJECT_ID=your-project-id
REGION=europe-west1

# Firestore Database (optional, default: "(default)")
# In DEV environment, this will be automatically prefixed with "dev-"
FIRESTORE_DATABASE=(default)

# ===============================================================
# STORAGE BUCKETS
# ===============================================================
ORIGINAL_BUCKET_NAME=your-original-bucket
PROCESSED_BUCKET_NAME=your-processed-bucket

# ===============================================================
# PUBSUB CONFIGURATION
# Note: In DEV environment, all topics/subscriptions are automatically
# prefixed with "dev-". You don't need to add the prefix manually.
# ===============================================================

# Upload Status (GCS Notifications)
UPLOAD_STATUS_SUBSCRIPTION=upload-status-sub
UPLOAD_STATUS_TOPIC=upload-status

# Image Processing Request
IMAGE_PROCESSING_REQUEST_TOPIC=image-processing-request
IMAGE_PROCESSING_REQUEST_SUB=image-processing-request-sub
IMAGE_PROCESSING_REQUEST_DLQ=image-processing-request-dlq

# Image Processing Result
IMAGE_PROCESSING_RESULT_TOPIC=image-processing-results
IMAGE_PROCESSING_RESULT_SUB=image-processing-results-sub
IMAGE_PROCESSING_RESULT_DLQ=image-processing-results-dlq

# Image Deletion
IMAGE_DELETION_TOPIC=image-deletion-requests
IMAGE_DELETION_SUB=image-deletion-requests-sub
IMAGE_DELETION_DLQ=image-deletion-requests-dlq

# Image Process DLQ (for failed processing events)
IMAGE_PROCESS_DLQ_TOPIC=image-process-dlq
IMAGE_PROCESS_DLQ_SUB=image-process-dlq-sub

# ===============================================================
# WORKER CONFIGURATION
# ===============================================================
WORKER_TYPE=cloudrun
CLOUD_RUN_JOB_SMALL=your-small-job-id
CLOUD_RUN_JOB_MEDIUM=your-medium-job-id
CLOUD_RUN_JOB_LARGE=your-large-job-id

# ===============================================================
# LOCAL DEVELOPMENT ONLY
# ===============================================================

# TLS Certificates for local HTTPS
CERT_FILE=/path/to/your/certificates/localhost.pem
KEY_FILE=/path/to/your/certificates/localhost-key.pem

# GCP Service Account Credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials/service-account.json

# Database Seeding
SEED_DATABASE=true