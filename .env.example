# Application Environment
ENV=LOCAL
APP_VERSION=1.0.0

# GCP Configuration
PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-file.json

# Storage Buckets
ORIGINAL_BUCKET_NAME=your-original-bucket-name
PROCESSED_BUCKET_NAME=your-processed-bucket-name

# Server Configuration
PORT=8080
GIN_MODE=debug

# Timeouts
READ_TIMEOUT=15s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Message Broker Topics
UPLOAD_STATUS_TOPIC_ID=upload-status
IMAGE_PROCESSING_TOPIC_ID=image-processing
IMAGE_PROCESS_RESULT_TOPIC_ID=image-process-result

# Message Broker Subscriptions
UPLOAD_STATUS_SUBSCRIPTION_ID=upload-status-sub
IMAGE_PROCESS_RESULT_SUBSCRIPTION_ID=image-process-result-sub

# Database Seeding (set to true for local development)
SEED_DATABASE=false